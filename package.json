{
  "name": "serverless-deployment-manager",
  "version": "0.4.0",
  "description": "Serverless Framework Plugin for managing deployment to predefined AWS accounts",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "compile": "babel src --out-dir lib",
    "pre-commit": "npm run compile && npm run lint && npm run prettify",
    "prepublishOnly": "npm run compile",
    "lint": "eslint . --fix --cache",
    "prettify": "prettier --write --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\""
  },
  "author": "laardee",
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "sls.js"
    ]
  },
  "keywords": [
    "serverless"
  ],
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.953.0",
    "ramda": "^0.27.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "babel-jest": "^25.5.1",
    "eslint": "^6.8.0",
    "eslint-config-maasglobal": "^3.0.1",
    "eslint-plugin-import": "^2.23.4",
    "husky": "^4.3.8",
    "jest": "^25.5.4",
    "prettier": "^1.19.1",
    "regenerator-runtime": "^0.13.9",
    "serverless": "^3.25.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maasglobal/serverless-deployment-manager.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
